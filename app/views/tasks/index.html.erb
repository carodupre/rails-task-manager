<h1>"Oh man, you have so much to do!"</h1>


<ul>
  <li class="fas fa-plus"></li>
  <li><%= link_to "Add a task", new_task_path %></li>
</ul>

<div class="grid-container">
  <% @tasks.each do |task| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= task.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= task.details %></h6>
      <p class="card-text"> Completed already ?
            <% if task.completed == false %>
            <span> 👎 </span>
            <% else %>
            <span> 👍 </span>
            <% end %>
      </p>
      <%= link_to "See details", task_path(task.id), class: "card-link" %>
      <%= link_to "Edit", edit_task_path(task.id), class: "card-link"%>
      <%= link_to "Delete", task_path(task.id), data: { confirm: "Are you sure?" }, method: :delete, class: "card-link" %>
    </div>
  </div>
  <% end %>
</div>





