<h1>Here are the task details</h1>

<div class="grid-container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @task.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= @task.details %></h6>
      <p class="card-text"> Completed already ?
        <% if @task.completed == false %>
        <span> 👎 </span>
        <% else %>
        <span> 👌 </span>
        <% end %>
      </p>
      <%= link_to "Back to list", tasks_path, class: "card-link" %>
      <%= link_to "Edit", edit_task_path, class: "card-link"%>
    </div>
  </div>
</div>
